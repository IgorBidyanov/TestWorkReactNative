{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": ["es2021", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
      "screens/*": ["src/screens/*"],
      "navigation/*": ["src/navigation/*"],
      "components/*": ["src/components/*"]
    }
  },
}
